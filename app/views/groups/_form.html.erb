<%= render "layouts/errors", obj: @group %>
<%= form_with model:[category, group], local:true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名%>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :紹介文%>
    <%= f.text_area :introduction, rows: "15", class: "form-control" %>
  </div>
  <div class="form-group">
    <% if action_name == "new" %>
      <%= f.submit "作成", class: "form-control btn"  %>
    <% else %>
      <%= f.submit "更新", class: "form-control btn"  %>
    <% end %>
  </div>
<% end %>