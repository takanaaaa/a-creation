<% users.each do |user| %>
  <tr>
    <td>
      <%= attachment_image_tag user, :profile_image, fallback: "no-image.jpg", class: "profile_image_sm" %>
    </td>
    <td>
      <p><%= link_to user.name, user_path(user), class: "text-dark" %></p>
      <p  id ="profile-text-hidden"><%= user.profile %></p>
    </td>
    <td id="favorite-btn_<%= user.id %>">
      <%= render "relationships/follow-btn", user: user %>
    </td>
  </tr>
<% end %>