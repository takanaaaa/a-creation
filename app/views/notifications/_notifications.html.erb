<% notifications.each do |notification| %>
  <tr>
    <td>
      <%= link_to user_path(notification.visiter.id) do %>
        <%= attachment_image_tag notification.visiter, :profile_image, :fill,100,100, fallback: "no-image.jpg", size: "50x50", class: "profile_image_sm" %>
      <% end %>
    </td>
    <td class="notice-text"><%= notification_form(notification) %></td>
    <td class="notice-date"><%= " (#{time_ago_in_words(notification.created_at)} ago)" %></td>
  </tr>
<% end %>