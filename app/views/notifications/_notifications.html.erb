<% notifications.each do |notification| %>
  <div class="user-view clearfix ">
    <%= link_to user_path(notification.visiter.id) do %>
      <%= attachment_image_tag notification.visiter, :profile_image, :fill,100,100, fallback: "no-image.jpg", size: "50x50", class: "profile_image_sm" %>
    <% end %>
    <%= notification_form(notification) %><span><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
    <br>
    <% if !@comment.nil? %>
      <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
    <% end %>
  </div>
<% end %>