<div class="devise container">
  <h2>Forgot your password?</h2>
  <div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 form-group">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0 email",class: "far form-control" %>
      </div>
    
      <div class="action">
        <%= f.submit "send mail", class: "devise-btn" %>
      </div>
    <% end %>
  </div>
  <div class="link">
    <%= render "devise/shared/links" %>
  </div>
</div>
