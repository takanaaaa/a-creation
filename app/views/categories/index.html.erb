<div class="container">
  <% if user_signed_in? %>
  　<%= form_tag search_path, method: :get do %>
  　　<%= text_field_tag (:word) %>
  　　<%= hidden_field_tag 'range', 'category' %>
  　　<%= submit_tag "検索" %>
  　<% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <%= render "categories/index", categories: @categories %>
        </tbody>
      </table>
      <%= link_to "追加", new_category_path %>
    </div>
  </div>
</div>