<div class="container">
  <div class="col-md-8 offset-md-2">
    <%= form_with model:@category, local:true do |f| %>
      <div class="form-group">
        <%= f.label :カテゴリー名 %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :紹介 %>
        <%= f.text_area :introduction, rows: "15", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "作成" %>
      </div>
    <% end %>
  </div>
</div>