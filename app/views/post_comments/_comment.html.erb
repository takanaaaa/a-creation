<% post_comments.each do |comment| %>
  <tr>
    <td><%= attachment_image_tag comment.user, :profile_image, fallback: "no-image.jpg", class: "profile-image-sm" %></td>
    <td class="comment-text">
      <%= link_to comment.user.name, user_path(comment.user) %>
      <%= simple_format comment.comment %>
    </td>
    <td class="comment-setting">
      <% if comment.user == current_user %>
        <%= link_to "Delete", post_post_comment_path(post_id: post,id: comment.id), method: :delete, remote:true %>
      <% end %>
    </td>
  </tr>
<% end %>