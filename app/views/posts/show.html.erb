<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card" style="width: 20rem;">
        <%= attachment_image_tag @post, :image, fallback: "no-image.jpg", class: "card-img-top" %>
        <div class="card-body">
          <p class="card-text">
            <%= simple_format @post.body %>
          </p>
        </div>
        <%= link_to "削除", post_path(@post), method: :delete %>
      </div>
    </div>
    <div class="col-6">

    </div>
  </div>
</div>