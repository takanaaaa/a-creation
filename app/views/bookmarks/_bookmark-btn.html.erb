<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post.id), method: :delete, remote:true do %>
    <lottie-player src="https://assets1.lottiefiles.com/packages/lf20_qdhnrrok.json"  background="transparent"  speed="1"  style="width: 30px; height: 30px;"    autoplay></lottie-player>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post.id), method: :post, remote:true do %>
    <i class="far fa-bookmark"></i>
  <% end %>
<% end %>